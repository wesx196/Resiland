<p id="notice"><%= notice %></p>

<h1> <a href="http://localhost:3000/"><%= image_tag("logos/logo.PNG") %></a></h1><h2>Appointments</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.email %></td>
        <td><%= app.location %></td>
        <td><%= app.date %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= button_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-outline-primary">
<%= link_to 'New Appointment', new_app_path, :class => "btn" %>
</div>



